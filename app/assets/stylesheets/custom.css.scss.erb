/** variables **/


/** navbar css **/
#navbar ul { 
	margin: 0; 
	padding: 5px; 
	padding-top: 50px;
	list-style-type: none; 
	text-align: center; 
	background-color: #fff; 
} 
 
#navbar ul li {  
	display: inline; 
	font-family: proximaNovaSemibold, proximaNova, Helvetica, Arial, sans-serif;
	text-transform: uppercase;
	font-size: 11px;
	letter-spacing: 0.4px;
} 
 
#navbar ul li a { 
	text-decoration: none; 
	padding: .2em 3.3em; 
	color: #7B7B7B; 
} 
 
#navbar ul li a:hover { 
	color: #000;
} 

/** typography rules **/
h1 {
	font-family: shoreslines, proximaNovaBold, proximaNova, Helvetica, Arial, sans-serif;
	font-size: 54px;
	margin-top: 50px;
	margin-bottom: 30px;
	padding-left: 25px;
}

h2 {
	font-family: proximaNova, proximaNovaSemibold, Helvetica, Arial, sans-serif;
	font-size: 40px;
	margin-bottom: 52px;

}

p {
	font-family: proximaNova, Helvetica, Arial, sans-serif;
	font-size: 14px;
	color: #3C3C3C;
	line-height: 1.8;
}

h4 {
	font-family: proximaNovaSemibold, proximaNova, Helvetica, Arial, sans-serif;
	font-size: 16px;
}

/** spacing **/
.short-width {
	max-width: 65%;
}

.medium-width {
	max-width: 95%;
}

.space-below {
	margin-bottom: 80px;
}

.float {
	float: left;
}

.bio {
	padding-left: 210px;
}

.content {
	margin-bottom: 80px;
	height: 150px;
}

@media only screen and (max-width: 990px) {
	.content{
		margin-bottom: 140px;
		height: 200px;
	}
}

@media only screen and (max-width: 768px) {
	.content{
		margin-bottom: 140px;
		height: 150px;
	}
}

@media only screen and (max-width: 720px) {
	.content {
		margin-bottom: 140px;
	    height: 200px;
	}
}

@media only screen and (max-width: 650px) {
	.content {
		margin-bottom: 170px;
	    height: 400px;
	}
}


@media only screen and (max-width: 555px) {
	.content {
		margin-bottom: 440px;
	    height: 400px;
	}
}

@media only screen and (max-width: 480px) {
	.content {
		margin-bottom: 990px;
	    height: 400px;
	}
}

/** for the menu **/
.description {
	padding-left: 54%;
}

.food {
	padding-bottom: 165px;
}

/** for the faq **/
.question {
	padding-bottom: 20px;
}

